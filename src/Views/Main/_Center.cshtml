@(
 Html.X().TabPanel()
        .ID("ExampleTabs")
        .Region(Region.Center)
        .MarginSpec("0 4 4 0")
        .Cls("tabs")
        .MinTabWidth(115)
        .Items(items =>
        {
            items.Add(new Panel
            {
                ID = "tabHome",
                Title = "Home",
                HideMode = HideMode.Offsets,
                Icon = Icon.Application,
                Loader = new ComponentLoader
                {
                    Mode = LoadMode.Frame,
                    Url = Url.Action("Home"),
                    LoadMask =
                    {
                        ShowMask = true
                    }
                }
            });
        })
        .Listeners(l =>
        {
            l.TabChange.Fn = "addToken";
        })
        .Plugins(plugins => plugins.Add(new TabCloseMenu()))
)